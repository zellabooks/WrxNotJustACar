<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="750sp"
    android:layout_height="match_parent">

    <TableRow android:layout_width="0dp">

        <ImageView

            android:layout_width="184dp"
            android:layout_height="103dp"
            android:contentDescription="@string/txtDescription"
            android:padding="15sp"
            android:src="@drawable/racewrx" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingRight="40sp"
            android:text="@string/txtRace"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:layout_height="114dp">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="121dp"
            android:contentDescription="@string/txtDescription"
            android:padding="15sp"
            android:src="@drawable/wrxrace" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:paddingRight="40sp"
            android:text="@string/txtOffroad"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <ImageView

            android:layout_width="200dp"
            android:layout_height="121dp"
            android:contentDescription="@string/txtDescription"
            android:padding="15sp"
            android:src="@drawable/dailydriverwrx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40sp"
            android:text="@string/txtDaily"
            android:textSize="24sp" />
    </TableRow>
</TableLayout>
